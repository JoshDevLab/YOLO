	<select id="getLeaveEmpList" resultMap="leaveEmpMap">
		select empno
		from tbl_employees E join tbl_leave_absence L
		on E.empno = L.fk_empno
		where E.status ='휴직'
		and to_char(sysdate, 'yyyy-mm-dd') >= to_char(enddate,'yyyy-mm-dd')
	</select>
	
