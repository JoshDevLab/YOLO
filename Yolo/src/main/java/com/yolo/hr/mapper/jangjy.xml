		insert into tbl_personnel_appointment(  pk_psano 
		                                      , fk_empno 
		                                      , fk_before_deptno 
		                                      , before_position 
		                                      , fk_after_deptno 
		                                      , after_position 
		                                      , memo 
		                                      , psa_date
		                                      , psa_label )
		                                values( seq_psano.nextval
		                                      , #{empno}
                                      		  , #{before_deptno}
		                                      , #{before_position}
		                                      <choose>
		                                      	<when test="(deptno != null or !deptno.equals('')) and (teamno== null or teamno.equals(''))">
		                                      		 , #{deptno}
		                                      	</when>
		                                      	
		                                      	<when test="(deptno != null or !deptno.equals('')) and (teamno!= null or !teamno.equals(''))">
		                                      		 , #{teamno}
		                                      	</when>
